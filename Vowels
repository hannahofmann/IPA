<script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.3/lottie.min.js"></script>
<script>
document.querySelectorAll(".letter").forEach(letter => {
            letter.addEventListener("click", function () {
                const animationPath = this.getAttribute("data-animation");
                const soundPath = this.getAttribute("data-sound");

                const popupOverlay = document.getElementById("popupOverlay");
                const popupContainer = document.getElementById("popupContainer");
                const popupContent = document.getElementById("popupContent");

                popupOverlay.style.display = "block";
                popupContainer.style.display = "block";

                popupContent.innerHTML = ""; 

                const animation = lottie.loadAnimation({
                    container: popupContent,
                    renderer: "svg",
                    loop: false,
                    autoplay: true,
                    path: animationPath
                });

                const audio = new Audio(soundPath);
                audio.play();
            });
        });

        function closePopup() {
            const popupOverlay = document.getElementById("popupOverlay");
            const popupContainer = document.getElementById("popupContainer");

            popupOverlay.style.display = "none";
            popupContainer.style.display = "none";
            lottie.destroy();
        };	
	function showPppopup(index) {
            const pppopups = document.querySelectorAll(".pppopup");
            pppopups[index - 1].style.display = "block";
        }

function closePppopup(index) {
    const pppopup = document.querySelectorAll(".pppopup")[index - 1];
    pppopup.style.display = "none";
}
</script>
